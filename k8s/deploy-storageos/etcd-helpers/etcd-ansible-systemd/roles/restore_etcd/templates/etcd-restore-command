        --name etcd-{{ hostvars[inventory_hostname]['inventory_hostname'] }} \
        --initial-cluster-token my-etcd-token \
        --data-dir {{ installation_dir }} \
        --initial-advertise-peer-urls http://{{ hostvars[inventory_hostname]['ip'] }}:{{ etcd_port_peers }} \
        --initial-cluster \
